
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="10"
    android:columnCount="10"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52.6dp"
        android:orientation="horizontal">

        <Button
            android:text="Rotate"
            android:layout_width="80.4dp"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btnRotate1" />
        <Button
            android:text="Switch"
            android:layout_width="80.4dp"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btnSwitch1" />
        <Button
            android:text="Undo"
            android:layout_width="80.4dp"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btnUndo1" />

    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="269.5dp"
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
    >
    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="269.5dp"
        android:orientation="vertical">
    </GridLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52.6dp">
        <Button
            android:text="Rotate"
            android:layout_width="80.4dp"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btnRotate2" />
        <Button
            android:text="Switch"
            android:layout_width="80.4dp"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btnSwitch2" />
        <Button
            android:text="Undo"
            android:layout_width="80.4dp"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btnUndo2" />
    </LinearLayout>
</LinearLayout>